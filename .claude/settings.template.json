{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "_comment": "Copy this to ~/.claude/settings.json or .claude/settings.local.json and customize",

  "permissions": {
    "allow": [
      "Bash(npm run lint)",
      "Bash(npm run test *)",
      "Bash(npm run build)",
      "Bash(npx prettier *)",
      "Bash(npx eslint *)",
      "Bash(git status)",
      "Bash(git diff *)",
      "Bash(git log *)",
      "Bash(gh pr *)",
      "Bash(gh issue *)",
      "Read(~/.zshrc)",
      "Read(~/.bashrc)"
    ],
    "ask": [
      "Bash(git push *)",
      "Bash(git commit *)",
      "Bash(npm publish *)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(./**/credentials*)",
      "Read(./**/*.pem)",
      "Read(./**/*.key)",
      "Write(./.env)",
      "Write(./.env.*)",
      "Write(./secrets/**)",
      "Bash(rm -rf *)",
      "Bash(curl * | sh)",
      "Bash(curl * | bash)"
    ],
    "additionalDirectories": []
  },

  "env": {
    "NODE_ENV": "development",
    "_comment": "Add your environment variables here"
  },

  "attribution": {
    "commit": "Generated with Claude Code\n\nCo-authored-by: Claude <noreply@anthropic.com>",
    "pr": "This PR was generated with assistance from Claude Code."
  },

  "model": "claude-sonnet-4-6",
  "_modelComment": "Options: claude-sonnet-4-6, claude-opus-4-6",

  "alwaysThinkingEnabled": false,
  "_thinkingComment": "Set to true for deeper reasoning on complex tasks",

  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": false,
    "excludedCommands": ["git", "gh", "docker", "kubectl"],
    "_comment": "Sandbox provides additional security for bash commands"
  },

  "hooks": {
    "_comment": "See .claude/hooks/ for available hook scripts. All hooks are Node.js (.js).",
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/block-sensitive-files.js"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/auto-format.js"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/session-end.js"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/session-start.js"
          }
        ]
      }
    ]
  },

  "enableAllProjectMcpServers": false,
  "enabledMcpjsonServers": ["context7", "memory", "playwright", "github"],
  "_mcpComment": "Enable additional MCP servers from .mcp.json as needed",

  "cleanupPeriodDays": 30,
  "_cleanupComment": "Delete inactive sessions after N days",

  "respectGitignore": true,
  "_gitignoreComment": "Respect .gitignore in file picker",

  "_usage": {
    "step1": "Copy this file to ~/.claude/settings.json (global) or .claude/settings.local.json (project)",
    "step2": "Remove underscore-prefixed comment fields",
    "step3": "Customize permissions, env vars, and hooks for your workflow",
    "step4": "Restart Claude Code to apply changes"
  }
}
