{
  "$schema": "../plugin-settings.schema.json",
  "name": "Full-Stack MCP Profile",
  "description": "10 MCPs for full-stack web development. ~40K token overhead (20% of context). Good balance of functionality and context efficiency.",
  "tokenOverhead": "~40,000 tokens",
  "contextUsage": "20%",
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"],
      "description": "Up-to-date library documentation lookup"
    },
    "memory": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "description": "Persistent knowledge graph for cross-session context"
    },
    "playwright": {
      "command": "npx",
      "args": ["@playwright/mcp@latest"],
      "description": "Browser automation and E2E testing"
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "description": "GitHub PRs, issues, and repository operations"
    },
    "supabase": {
      "command": "npx",
      "args": ["-y", "@supabase/mcp-server-supabase"],
      "description": "Supabase database, auth, and real-time operations"
    },
    "stripe": {
      "command": "npx",
      "args": ["-y", "@stripe/mcp", "--tools=all"],
      "description": "Payment processing and Stripe API operations"
    },
    "vercel": {
      "command": "npx",
      "args": ["-y", "@vercel/mcp"],
      "description": "Deployment management and project operations"
    },
    "figma": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-figma"],
      "description": "Design file access and component inspection"
    },
    "linear": {
      "command": "npx",
      "args": ["-y", "@linear/mcp-server"],
      "description": "Issue tracking and project management"
    },
    "sentry": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-sentry"],
      "description": "Error tracking and performance monitoring"
    }
  },
  "cliAlternatives": {
    "docker": "docker CLI (built-in)",
    "kubernetes": "kubectl CLI (brew install kubectl)",
    "aws": "aws CLI (brew install awscli)",
    "postgres": "psql CLI (brew install postgresql)",
    "redis": "redis-cli (brew install redis)",
    "mongodb": "mongosh CLI (brew install mongosh)",
    "terraform": "terraform CLI (brew install terraform)"
  }
}
