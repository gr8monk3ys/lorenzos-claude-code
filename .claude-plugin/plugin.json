{
  "name": "lorenzos-claude-code",
  "version": "2.1.1",
  "description": "Lorenzo's Claude Code setup: 65 commands (12 categories), 25 agents, 20 skills, 4 orchestrators, 4 MCP servers (minimal profile), 15 hooks, 3 context modes. CLI-first, context-efficient.",
  "author": {
    "name": "Lorenzo",
    "email": "gr8monk3ys@gmail.com",
    "url": "https://github.com/gr8monk3ys"
  },
  "license": "GPL-3.0",
  "repository": "https://github.com/gr8monk3ys/lorenzos-claude-code",
  "keywords": [
    "claude-code",
    "nextjs",
    "react",
    "typescript",
    "supabase",
    "commands",
    "agents",
    "skills",
    "cli-first"
  ],
  "profiles": {
    "minimal": ".claude/profiles/mcp-minimal.json",
    "fullstack": ".claude/profiles/mcp-fullstack.json",
    "enterprise": ".claude/profiles/mcp-enterprise.json"
  },
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"],
      "description": "Up-to-date library documentation lookup (no CLI alternative)"
    },
    "memory": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "description": "Persistent knowledge graph for cross-session context (no CLI alternative)"
    },
    "playwright": {
      "command": "npx",
      "args": ["@playwright/mcp@latest"],
      "description": "Browser automation and E2E testing (MCP preferred over CLI)"
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "description": "GitHub PRs, issues, and repository operations (CLI alternative: gh)"
    }
  },
  "cliAlternatives": {
    "vercel": {
      "cli": "vercel",
      "install": "npm i -g vercel",
      "description": "Deployment management"
    },
    "docker": {
      "cli": "docker",
      "install": "Built-in with Docker Desktop",
      "description": "Container management"
    },
    "kubernetes": {
      "cli": "kubectl",
      "install": "brew install kubectl",
      "description": "Cluster management"
    },
    "aws": {
      "cli": "aws",
      "install": "brew install awscli",
      "description": "AWS services"
    },
    "terraform": {
      "cli": "terraform",
      "install": "brew install terraform",
      "description": "Infrastructure as code"
    },
    "postgres": {
      "cli": "psql",
      "install": "brew install postgresql",
      "description": "PostgreSQL database"
    },
    "redis": {
      "cli": "redis-cli",
      "install": "brew install redis",
      "description": "Redis key-value store"
    },
    "mongodb": {
      "cli": "mongosh",
      "install": "brew install mongosh",
      "description": "MongoDB operations"
    },
    "supabase": {
      "cli": "supabase",
      "install": "brew install supabase/tap/supabase",
      "description": "Supabase operations"
    },
    "stripe": {
      "cli": "stripe",
      "install": "brew install stripe/stripe-cli/stripe",
      "description": "Stripe payments"
    },
    "gitlab": {
      "cli": "glab",
      "install": "brew install glab",
      "description": "GitLab operations"
    },
    "linear": {
      "cli": "linear",
      "install": "npm i -g @linear/cli",
      "description": "Linear issue tracking"
    }
  },
  "removedMcps": {
    "sequential-thinking": "Claude does this natively - unnecessary overhead",
    "chrome-devtools": "Use playwright instead - more reliable",
    "firecrawl": "Use WebFetch tool instead - built-in to Claude Code",
    "tavily": "Use WebSearch tool instead - built-in to Claude Code",
    "semgrep": "Run as CLI in CI/CD - not needed in context",
    "duckdb": "Use postgres or sqlite CLI - redundant"
  },
  "contextOptimization": {
    "enableToolSearch": true,
    "recommendedProfile": "minimal",
    "documentation": ".claude/docs/CLI-ALTERNATIVES.md"
  }
}
